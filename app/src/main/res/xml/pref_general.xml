<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Preferences">

        <EditTextPreference
            android:defaultValue="0"
            android:inputType="numberDecimal"
            android:key="@string/minMag_key"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="0"
            android:title="@string/minMag_title" />

        <ListPreference
            android:defaultValue="time"
            android:entries="@array/settings_order"
            android:entryValues="@array/order_values"
            android:key="@string/sortBy_key"
            android:summary="Time"
            android:title="@string/sortBy_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/location_key"
            android:summary="@string/location_summary"
            android:title="@string/location_title" />
    </PreferenceCategory>

</PreferenceScreen>
